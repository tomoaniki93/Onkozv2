# Server
PORT=3000
NODE_ENV=production

# Domain (sans https://)
DOMAIN=onkoz.fr

# JWT Secret - CHANGE THIS! (min 32 chars)
JWT_SECRET=changeme_super_secret_jwt_key_onkoz_2024

# SQLite DB path
DB_PATH=./data/onkoz.db

# Mediasoup
# IP annonc√©e aux clients WebRTC (IP publique de ton VPS)
MEDIASOUP_ANNOUNCED_IP=YOUR_VPS_PUBLIC_IP

# RTC Ports range (ouvrir dans le firewall)
RTC_MIN_PORT=40000
RTC_MAX_PORT=49999

# Nombre de workers mediasoup (= nb vCores, max 6)
MEDIASOUP_NUM_WORKERS=4
