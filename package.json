{
  "name": "onkoz",
  "version": "1.0.0",
  "description": "ONKOZ - Voice & Chat Platform",
  "main": "server/index.js",
  "scripts": {
    "build:css": "tailwindcss -i ./client/css/input.css -o ./client/css/style.css --minify",
    "watch:css": "tailwindcss -i ./client/css/input.css -o ./client/css/style.css --watch",
    "dev":       "concurrently \"npm run watch:css\" \"nodemon server/index.js\"",
    "start":     "npm run build:css && node server/index.js"
  },
  "dependencies": {
    "bcryptjs":     "^2.4.3",
    "better-sqlite3": "^9.4.3",
    "cors":         "^2.8.5",
    "dotenv":       "^16.4.5",
    "express":      "^4.18.3",
    "jsonwebtoken": "^9.0.2",
    "mediasoup":    "^3.14.9",
    "socket.io":    "^4.7.5",
    "uuid":         "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon":      "^3.1.0",
    "tailwindcss":  "^3.4.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
